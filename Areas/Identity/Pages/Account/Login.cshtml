@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesion";
}
    <div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h1 class="text-center">@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input placeholder="Email" asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input placeholder="Contraseña" asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Aceptar</button>
                    <a id="forgot-password" class="btn btn-danger" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
        </form>
            </div>
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
 <div class="form-group">

        <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crea tu cuenta para empezar</a>
        </p>
        <p>
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </p>
</div>